{
    "manifest_version": 3,
    "name": "Discord Token Login",
    "version": "1.0.1",  
    "author": "Cracky",
    "description": "Adds a token login option to the Discord login page.",
    "permissions": [
      "activeTab",
      "tabs"
    ],
    "content_scripts": [
      {
        "matches": ["https://discord.com/login"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "tl.png",
        "48": "tl.png",
        "128": "tl.png"
      }
    }
  }
 